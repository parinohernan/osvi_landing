---
// src/components/molecules/FeatureCard.astro
// Dependency Inversion: depende de abstracción (interface), no de implementación concreta

import Icon from '../atoms/Icon.astro';
import Typography from '../atoms/Typography.astro';

interface Props {
  title: string;
  description: string;
  icon: 'smartphone' | 'package' | 'camera' | 'refresh';
  benefit: string;
}

const { title, description, icon, benefit } = Astro.props;
---

<article class="feature-card">
  <div class="feature-card__icon">
    <Icon name={icon} size={32} />
  </div>
  <Typography variant="h3" as="h3">{title}</Typography>
  <Typography variant="body" class="feature-card__desc">{description}</Typography>
  <span class="feature-card__benefit">
    <Icon name="check" size={16} />
    {benefit}
  </span>
</article>

<style>
  .feature-card {
    padding: var(--space-xl);
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }
  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 40px -10px rgba(0,0,0,0.1);
  }
  .feature-card__icon {
    width: 64px;
    height: 64px;
    background: var(--color-primary);
    color: white;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-lg);
  }
  .feature-card__desc {
    margin: var(--space-md) 0;
    color: var(--color-text-muted);
  }
  .feature-card__benefit {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-success);
    background: rgba(16, 185, 129, 0.1);
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-sm);
  }
</style>